    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Parcel (hooks)",
        "program": "${workspaceFolder}/node_modules/parcel/lib/bin.js",
        "runtimeArgs": ["--preserve-symlinks"],
        "env": {
          "PARCEL_WORKERS": "0"
        },
        "args": ["build", "${workspaceFolder}/app1/src/index.ts", "--no-cache"],
        "console": "integratedTerminal",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  